<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@color/white_shade"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    app:rippleColor="@color/purple">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/storeIMGG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/storeIMG"
                android:src="@drawable/amazon"
                android:layout_height="60dp"
                android:layout_width="60dp"
                app:sriv_left_top_corner_radius="8dp"
                app:sriv_right_top_corner_radius="8dp"
                app:sriv_left_bottom_corner_radius="8dp"
                app:sriv_right_bottom_corner_radius="8dp"
                app:sriv_border_width="2dip"
                app:sriv_border_color="@color/white"
                app:sriv_oval="false" />

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/storeTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="sans-serif"
            android:text="Amazon"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/storeIMGG"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/storeIMGG"
            app:layout_constraintTop_toTopOf="@+id/storeIMGG" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>